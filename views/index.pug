extends layout

block content
  .wishlist
    .santa-logo
      img(src="/images/santa-claus.png")

    .card.wishlist__card
      .header 
        h2 Dear Santa,
        p All I want for Christmas is:
      
      ul.card__body
        each item in wishlist
          li= item

      input.add-item.form-control(name="add-item" type="text" placeholder="Add item...")
