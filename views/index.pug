extends layout

block content
  .wishlist
    .santa-logo
      img(src="/images/santa-claus.png")

    .card.wishlist__card
      .header 
        h2 Dear Santa,
        p All I want for Christmas is:
      
      ul.card__body
        li Item 1
        li Item 2 🤑
        li Item 3 👓
        li Item 4 😍

      .add-item
        input.form-control(type="text" placeholder="Add item...")